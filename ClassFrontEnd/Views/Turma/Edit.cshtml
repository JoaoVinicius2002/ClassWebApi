@model ClassFrontEnd.Models.TurmaViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edição dos dados da turma</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="TurmaId" class="form-control"  type="hidden"/>
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nome</label>
                <input asp-for="TurmaNome" class="form-control" />
                <span asp-validation-for="TurmaNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Materia" class="control-label"></label>
                <input asp-for="Materia" class="form-control" />
                <span asp-validation-for="Materia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <form asp-action="Edit">
                    <input type="hidden" name="_method" value="PUT" />
                    <input type="submit" value="Save" class="btn btn-primary" />
                </form>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a listagem de turmas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
